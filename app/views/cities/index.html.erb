<%= render "shared/container" do %>
<h1>Cities</h1>
  <ul>
    <% @cities.each do |city| %>
      <li>
        <% if policy(city).show? %>
          <%= link_to city.name, city_path(city) %>
        <% else %>
          <%= city.name %>
        <% end %>
      </li>
  <div class="heart-icon">
  <%= link_to icon("far", "heart") %>
</div>
    <% end %>
</ul>
<% end %>

